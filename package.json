{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.5"
  },
  "scripts": {
    "publish": "yarn build && lerna publish",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ]
  }
}
